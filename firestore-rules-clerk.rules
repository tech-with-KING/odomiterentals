rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Since we're using Clerk (not Firebase Auth), request.auth will always be null
    // All access control is handled server-side via Firebase Admin SDK
    
    // Products: anyone can read, write controlled server-side
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Only server-side via Admin SDK
    }

    // Categories: anyone can read, write controlled server-side  
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Only server-side via Admin SDK
    }

    // Orders: controlled server-side only
    match /orders/{orderId} {
      allow read: if false; // Only server-side via Admin SDK
      allow write: if false; // Only server-side via Admin SDK
    }

    // Admin collection: no client access (server-side only)
    match /admin/{adminId} {
      allow read: if false; // Only server-side via Admin SDK
      allow write: if false; // Only server-side via Admin SDK
    }

    // Users collection: controlled server-side
    match /users/{userId} {
      allow read: if false; // Only server-side via Admin SDK
      allow write: if false; // Only server-side via Admin SDK
    }

    // Admin FCM tokens: server-side only
    match /admin_fcm_tokens/{tokenId} {
      allow read: if false; // Only server-side via Admin SDK
      allow write: if false; // Only server-side via Admin SDK
    }

    // Default: deny all client access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
